{
    "name": "thedava/dod-lite",
    "description": "A simple file based pseudo database",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "league/flysystem": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "DodLite\\": "src/DodLite/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "pestphp/pest": "^2.28",
        "league/flysystem-memory": "^3.0"
    }
}
